<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewItemListReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/reason_empty"
        android:textAppearance="@style/TextAppearance.Small.Dim.Highlight" />
    
    <com.etsy.android.grid.StaggeredGridView
        android:id="@+id/gridViewItemList"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:item_margin="3dp"
        app:column_count="@integer/gridview_num_columns" />

    <TextView
        android:id="@+id/textViewItemListEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/getting_your_location"
        android:textAppearance="@style/TextAppearance.Small.Dim" />

</LinearLayout>