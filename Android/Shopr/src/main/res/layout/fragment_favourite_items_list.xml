<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/gridViewItemList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:horizontalSpacing="4dp"
        android:numColumns="@integer/gridview_num_columns"
        android:verticalSpacing="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="gone" >
    </GridView>

    <TextView
        android:id="@+id/textViewItemListEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/loading_your_favourites"
        android:textAppearance="@style/TextAppearance.Small.Dim" />

</LinearLayout>